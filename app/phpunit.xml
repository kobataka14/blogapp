<phpunit bootstrap="bootstrap.php">
	<logging>
		<log type="coverage-clover" target="./reports/coverage.xml" />
		<log type="junit" target="./reports/unittest.xml" />
	</logging>

	<filter>
		<blacklist>
			<directroy suffix=".php">Plugin</directroy>
			<directroy suffix=".php">Test</directroy>
			<directroy suffix=".php">Vendor</directroy>
			<directory suffix=".php">Config/bootstrap</directory>
			<file>Config/database.php</file>
		</blacklist>
	</filter>
</phpunit>